            </div>

            <div>
                <input type="button" id="envoi" class="panier-bouton" value="Ajouter le produit" onclick="send()">

            </div>
            </form>  
        
      </div>
    </div>
    <div>
      <p class="description" id="description"></p>
    </div>

  <script type = "text/javascript" src="/js/addproduit.js">  
